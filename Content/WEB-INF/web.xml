<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
         version="4.0">
    
    <servlet>
    <servlet-name>AddArticleServlet</servlet-name>
    <servlet-class>controller.AddArticleServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>AddArticleServlet</servlet-name>
    <url-pattern>/addArticle</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>ListArticlesServlet</servlet-name>
    <servlet-class>controller.ListArticlesServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ListArticlesServlet</servlet-name>
    <url-pattern>/listArticles</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>EditArticleServlet</servlet-name>
    <servlet-class>controller.EditArticleServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>EditArticleServlet</servlet-name>
    <url-pattern>/editArticle</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>DeleteArticleServlet</servlet-name>
    <servlet-class>controller.DeleteArticleServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>DeleteArticleServlet</servlet-name>
    <url-pattern>/deleteArticle</url-pattern>
</servlet-mapping>

</web-app>
